/* miniprogram/pages/situation/index.wxss */
@import '/styles/flexbox.wxss';

.back_white {
  background: #fff;
  margin: 0 0 20rpx;
}

.swiper_container {
  width: 750rpx;
  height: 426rpx;
}

.desc {
  padding: 40rpx;
  font-size: 28rpx;
  line-height: 48rpx;
}

.back_white_bottom {
  background: #fff;
}

.card_header {
  font-size: 36rpx;
  line-height: 60rpx;
  color: #000;
  padding: 8rpx;
  margin: 0 40rpx 20rpx;
  border-bottom: 2px solid red;
}

.card_header image {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 10rpx;
}

.card_header text {
  margin-left: 10rpx;
}

.lwbz_left {
  padding: 20rpx 20rpx 20rpx 40rpx;
}

.lwbz_right {
  padding: 20rpx 40rpx 20rpx 20rpx;
}

.card_content_img {
  width: 200rpx;
  height: 292rpx;
}

.lwbz_name {
  font-size: 40rpx;
  font-weight: 400;
  line-height: 80rpx;
}

.lwbz_msg {
  line-height: 48rpx;
}