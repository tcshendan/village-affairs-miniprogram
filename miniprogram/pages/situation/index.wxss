/* miniprogram/pages/situation/index.wxss */
.back_white {
  background: #fff;
  margin: 0 0 20rpx;
}

.swiper_container {
  width: 750rpx;
  height: 426rpx;
}

.desc {
  padding: 40rpx;
  font-size: 28rpx;
  line-height: 48rpx;
}

.back_white_bottom {
  background: #fff;
}

.card_header {
  font-size: 36rpx;
  line-height: 60rpx;
  color: #000;
  padding: 8rpx;
  margin: 0 40rpx 20rpx;
  border-bottom: 2px solid red;
}

.card_header image {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 10rpx;
}

.card_header text {
  margin-left: 10rpx;
}

.flexbox {
  width: 100%;
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex_row {
  flex-direction: row;
}

.flexbox_item {
  flex: 1;
  min-width: 40rpx;
  width: 0;
}

.flexbox_item:first-child {
  margin-left: 0!important;
  margin-top: 0!important;
}

.lwbz_left {
  padding: 20rpx 20rpx 20rpx 40rpx;
}

.lwbz_right {
  padding: 20rpx 40rpx 20rpx 20rpx;
}

.card_content_img {
  width: 200rpx;
  height: 292rpx;
}

.lwbz_name {
  font-size: 40rpx;
  font-weight: 400;
  line-height: 80rpx;
}

.lwbz_msg {
  line-height: 48rpx;
}