/* miniprogram/pages/home/index.wxss */
.home_container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  height: 100vh;
  background: #eceff0;
  box-sizing: border-box;
}

.list_container {
  position: relative;
  overflow-x: hidden;
  overflow-y: auto;
}

.home_banner {
  width: 100%;
  margin: 0 auto;
  position: relative;
}

.home_banner image {
  width: 100%;
  height: 421.88rpx;
  margin: 0px auto;
}

.home_wbine {
  background-color: #fff;
  border-radius: 14px;
  margin: 0 3%;
  padding: 10px;
}

.home_nbine {
  border-radius: 9px;
  border: 2px solid #f6eaea;
  padding: 0 10px;
}

.grids {
  display: flex;
  position: relative;
  overflow: hidden;
}

.grid-item {
  position: relative;
  padding: 20px 10px;
  flex: 1;
  box-sizing: border-box;
}

.grid-item image {
  width: 100%;
  height: 84.16rpx;
}

.grids.bottom .grid-item image {
  height: 172.10rpx;
}