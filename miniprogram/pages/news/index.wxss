/* miniprogram/pages/news/index.wxss */
.liststyle {
  position: relative;
  border-radius: 2px;
  padding: 20rpx;
  box-sizing: border-box;
  border-top-left-radius: 1px;
  border-bottom-left-radius: 1px;
  border: 1px solid #fff;
  border-left-color: #8aa9d5;
  background-color: #fff;
  margin: 0 0 20rpx 0;
}

.news_card {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.img_box {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 50%;
  margin-top: -80rpx;
}

.img_box image {
  width: 160rpx;
  height: 160rpx;
}

.content_box {
  padding-left: 180rpx;
  flex: 1;
}

.news_title {
  font-size: 40rpx;
  color: #333;
}

.news_info {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  padding: 40rpx 0 0;
}

.news_info .state {
  width: 54%;
}

.right_arrow {
  position: absolute;
  right: 10rpx;
  bottom: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 36rpx;
  height: 60rpx;
  font-size: 36rpx;
  color: #999;
}