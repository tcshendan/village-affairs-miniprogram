/* miniprogram/pages/attention/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
  background: #eceff0;
  box-sizing: border-box;
}

.tab-container {
  height: 88rpx;
  top: 0;
  left: 0;
  right: 0;
  overflow: hidden;
  position: fixed;
  z-index: 109999;
}

.tab {
  display: flex;
  background-color: #fff;
  height: 88rpx;
  position: relative;
}

.tab-item {
  display: block;
  flex: 1;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: linear-gradient(180deg,#e5e5e5,#e5e5e5,hsla(0,0%,90%,0)) 0 100% no-repeat;
  background-size: 100% 1px;
  font-size: 28rpx;
  text-align: center;
  line-height: 88rpx;
  color: #666;
}

.tab-center {
  justify-content: center;
  align-items: center;
}

.tab-item.tab-selected {
  border: none;
  color: rgb(252, 55, 140);
}

.tab-ink-bar {
  position: absolute;
  bottom: 0;
  text-align: center;
  /* display: block;
  height: 2px;
  background: rgb(252, 55, 140);
  left: 0%;
  right: 66.6667%; */
}

.tab-ink-bar-transition-backward {
  transition: right .3s cubic-bezier(.35,0,.25,1) .09s,left .3s cubic-bezier(.35,0,.25,1);
}

.weui-tabs-bar__wrp {
  /* border-bottom: 1px solid #eee; */
  margin-top: 88rpx;
  background: transparent !important;
}

.weui-tabs-bar__content {
  height: 80rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.weui-tabs-bar__item {
  background: transparent !important;
}

.weui-tabs-bar__title {
  margin: 0 10rpx;
  padding: 0 10rpx;
  line-height: 60rpx;
  font-size: 26rpx !important;
  color: #999 !important;
  border-bottom: none !important;
}

.weui-tabs-bar__title > text {
  display: block;
  line-height: 60rpx;
}

.tab-bar-title__selected {
  /* font-size: 20px;
  font-weight: bold; */
  color: #c0132d !important;
}

.weui-tabs-swiper {
  width: 100%;
  min-height: 100vh;
}

.weui-tabs-swiper swiper-item {
  height: calc(100% - 88rpx - 80rpx) !important;
  overflow: auto !important;
}

.tab-content {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  overflow-y: auto;
}

.listContainer {
  width: 100%;
  position: relative;
  overflow-x: hidden;
  overflow-y: auto;
}