/* miniprogram/pages/news_detail/index.wxss */
.detail_container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
  padding: 0;
  font-size: 28rpx;
  box-sizing: border-box;
}

.text_center {
  margin: 0.75em 0;
  text-align: center;
  font-size: 1.5em;
  font-weight: 400;
  line-height: 80rpx;
}

.flexbox {
  width: 100%;
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex_row {
  flex-direction: row;
}

.flexbox_item {
  flex: 1;
  min-width: 40rpx;
  width: 0;
}

.flexbox_item:first-child {
  margin-left: 0!important;
  margin-top: 0!important;
}

.xsd_info {
  padding: 0 40rpx 40rpx;
}

.xsd_text_right {
  text-align: right;
}

.swiper_container {
  width: 750rpx;
  height: 426rpx;
}

.gkp {
  padding: 40rpx;
  line-height: 48rpx;
}